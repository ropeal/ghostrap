{{!< default}}

 <div class="row">
  <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-ms-12 col-xs-12">
    <article itemscope itemtype="http://schema.org/BlogPosting" role="article" class="post {{post_class}}">
      {{#post}}
        <section class="post-container">
          <header class="post-header">
            <h3 itemprop="name headline" class="post-title"><a href="{{url}}" itemprop="url" data-pjax title="{{{title}}}">{{{title}}}</a></h3>
            {{! A subtitle not available in Ghosts yet }}
            <!--h2 itemprop="about" class="post-subtitle"></h2-->
            <span class="post-info">
              <span><span class="glyphicon glyphicon-user"></span> {{author.name}}  </span>
              <span><span class="glyphicon glyphicon-time"> </span><time class="post-date" itemprop="datePublished"> {{date format='MMMM DD, YYYY'}}</time></span>
            </span>
          </header>
          <div itemprop="articleBody" class="post-body">
            {{content}}
          </div>
          <footer class="post-footer">
	         <div class="row">
            <div class="col-xs-5 post-social">
            <!-- JiaThis Button BEGIN -->
            <div class="jiathis_style">
              <a class="jiathis_button_tsina"></a>
              <a class="jiathis_button_weixin"></a>
              <a class="jiathis_button_qzone"></a>
              <a class="jiathis_button_twitter"></a>
              <a class="jiathis_button_fb"></a>
              <a class="jiathis_button_googleplus"></a>
            </div>
            </div>
            <div class="col-xs-7 text-right">
	           {{#if tags}}
                {{#foreach tags}}
                  <a itemprop="{{#if @first}}articleSection{{else}}keywords{{/if}}" href="{{url}}" data-pjax>#{{name}}</a>
                {{~#if @last}} {{else}} {{/if}}
                {{/foreach}}
              {{/if}}
	         </div>           
            </div>
          </footer>
        </section>
      {{/post}}
      <section itemprop="comment">
        <div id="cloud-tie-wrapper" class="cloud-tie-wrapper"></div>  <!--网易云跟帖--> 
      </section>
    </article>
  </div>
 </div>
