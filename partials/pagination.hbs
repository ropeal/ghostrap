<nav role="pagination" class="post-list-pagination text-center">
  {{#if prev}}
    <a href="{{pageUrl prev}}" class="post-list-pagination-item post-list-pagination-item-prev" data-pjax>
      <i class="glyphicon glyphicon-chevron-left"></i>&nbsp;前
    </a>
  {{/if}}
  <span class="post-list-pagination-item post-list-pagination-item-current">{{page}} / {{pages}}</span>
  {{#if next}}
    <a href="{{pageUrl next}}" class="post-list-pagination-item post-list-pagination-item-next" data-pjax>
      后&nbsp;<i class="glyphicon glyphicon-chevron-right"></i>
    </a>
  {{/if}}
</nav>
